<div class="container">
    <%= simple_form_for [@jersey, @booking] do |t| %>
      <%= t.input :start_date, required: :true, input_html: { id: "booking_start_date" } %>
      <%= t.input :end_date, required: :true, input_html: { id: "booking_end_date" } %>
      <%= t.submit "Confirm Your Booking", class: "btn btn-outline-success btn-sm" %>
    <% end %>
  <%= link_to "Back to Store", jerseys_path, class: "btn btn-outline-warning btn-sm" %>
</div>
